<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:paddingRight="8dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout10"
        android:background="@drawable/left_card_red"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@drawable/left_card_red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NOMOR ORDERID"
            android:id="@+id/txtNomor"
            android:layout_toEndOf="@+id/view"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="STATUS ORDER"
            android:id="@+id/txtStatusOrder"
            android:background="@drawable/bg_green"
            android:textColor="#ffffff"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            android:layout_below="@+id/txtTimeSpan" />

        <ImageButton
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:id="@+id/btnKomplain"
            android:layout_below="@+id/btnDetail"
            android:background="@drawable/bg_button"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignLeft="@+id/btnDetail"
            android:layout_alignStart="@+id/btnDetail"
            android:src="@drawable/complaint"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:id="@+id/imageButton2"
            android:layout_alignTop="@+id/txtNomor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/delete48"
            android:scaleType="fitEnd"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JUMLAH BIAYA"
            android:id="@+id/txtBiaya"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:id="@+id/btnDetail"
            android:background="@drawable/bg_button"
            android:scaleType="fitEnd"
            android:src="@drawable/search48"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TANGGAL ORDER"
            android:id="@+id/txtTimeSpan"
            android:layout_below="@+id/txtNomor"
            android:layout_toEndOf="@+id/view" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>