<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/bg_red_rounded"
            android:layout_centerInParent="true"
            android:id="@+id/lspare"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/imageView12"
                android:src="@drawable/electrical192"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrical"
                android:id="@+id/textView10"
                android:layout_below="@+id/imageView12"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_marginTop="@dimen/_3sdp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/bg_red_rounded"
            android:layout_centerInParent="true"
            android:id="@+id/laks"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/imageView13"
                android:src="@drawable/mechanical192"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanical"
                android:id="@+id/textView32"
                android:layout_below="@+id/imageView13"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_marginTop="@dimen/_3sdp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>