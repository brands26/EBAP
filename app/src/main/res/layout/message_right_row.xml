<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:gravity="end|right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/redchat"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtRead"
            android:layout_below="@+id/txtPesan"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPesan"
            android:textColor="#FFFFFF"

            android:layout_margin="5dp"
            android:layout_below="@+id/txtWaktu"
            android:foregroundGravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:lineSpacingExtra="3dp" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/txtWaktu"
        android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/txtNama"
            android:layout_alignParentRight="false"
            android:gravity="right"
            android:foregroundGravity="right" /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/txtNama"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:gravity="right"
        android:foregroundGravity="right" />


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:visibility="gone"
            android:foregroundGravity="right" />
    </RelativeLayout>
</RelativeLayout>